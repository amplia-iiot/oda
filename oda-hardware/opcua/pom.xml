    <modelVersion>4.0.0</modelVersion>

    <artifactId>opcua</artifactId>
    <packaging>bundle</packaging>

    <name>OpenGate Device Agent Hardware - OPC-UA devices</name>
    <description>OPC-UA devices and utilities for OpenGate Device Agent artifacts</description>

    <parent>
        <artifactId>oda-hardware</artifactId>
        <groupId>es.amplia.oda.hardware</groupId>
        <version>4.11.1-SNAPSHOT</version>
    </parent>

    <properties>
        <bundle.symbolic.name>${project.groupId}.${project.artifactId}</bundle.symbolic.name>
        <bundle.namespace>${project.groupId}.${project.artifactId}</bundle.namespace>

        <netty.version>4.1.109.Final</netty.version>
        <bouncycastle.version>1.78.1</bouncycastle.version>
		<milo.version>0.6.13</milo.version>
    </properties>

    <build>
        <finalName>${bundle.symbolic.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${bundle.symbolic.name}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Bundle-Activator>${bundle.namespace}.Activator</Bundle-Activator>
                        <Export-Package>!*</Export-Package>
                        <Import-Package>!com.google.code.findbugs,!commons-logging,!log4j,!org.javassist,!commons-beanutils,
                            !com.google.protobuf.*,!javax.annotation.*,!javax.xml.*,!com.jcraft.jzlib,!javassist,!org.apache.commons.*,
                            !org.apache.log4j.*,!sun.*,!com.oracle.*,!com.aayushatharva.brotli4j,!com.aayushatharva.brotli4j.decoder,
                            !com.aayushatharva.brotli4j.encoder,!com.github.luben.zstd,!com.google.common.util.concurrent.internal,
                            !com.google.errorprone.annotations,!com.google.errorprone.annotations.concurrent,!com.ning.compress.*,
                            !io.netty.channel.unix,!io.netty.internal.*,!lzma.sdk.*,!net.jpountz.*,!org.apache.logging.*,
                            !org.checkerframework.*,!org.conscrypt.*,!org.eclipse.jetty.*,!org.jboss.marshalling,!reactor.blockhound.*,*</Import-Package>
                        <Private-Package>${bundle.namespace}.*</Private-Package>
                        <Embed-Dependency>sdk-client,sdk-core,stack-client,stack-core,strict-machine,guava,netty-transport,netty-buffer,netty-codec,
                            netty-codec-http,netty-common,netty-handler,strict-machine,netty-channel-fsm,netty-resolver,
                            bcprov-jdk18on, bcpkix-jdk18on, bcutil-jdk18on
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Embed-Directory>lib</Embed-Directory>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>instrument</id>
                        <goals>
                            <goal>instrument</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>restore-instrumented-classes</id>
                        <goals>
                            <goal>restore-instrumented-classes</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <jacoco-agent.destfile>${project.build.directory}/jacoco.exec</jacoco-agent.destfile>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>

