<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>spin-remote</id>
    <formats>
        <format>tar.bz2</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.apache.felix:org.apache.felix.main</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <outputFileNameMapping>
                ${artifact.groupId}.${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.apache.felix:configadmin</include>
                <include>org.apache.felix:eventadmin</include>
                <include>org.apache.felix:fileinstall</include>
                <include>org.apache.felix:org.apache.felix.gogo.runtime</include>
                <include>org.apache.felix:org.apache.felix.gogo.command</include>
                <include>org.fusesource.jansi:jansi</include>
                <include>org.jline:jline</include>
                <include>org.apache.felix:org.apache.felix.gogo.jline</include>
                <include>org.apache.felix:org.apache.felix.log</include>
                <include>org.slf4j:slf4j-api</include>
                <include>ch.qos.logback:logback-classic</include>
                <include>ch.qos.logback:logback-core</include>
                <include>org.apache.felix:org.apache.felix.logback</include>
            </includes>
            <outputDirectory>bundle</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>es.amplia.oda.core:commons</include>
                <include>es.amplia.oda.hardware:atserver</include>
                <include>es.amplia.oda.datastreams:deviceinfo</include>
                <include>es.amplia.oda.subsystem:sshserver</include>
                <include>es.amplia.oda.subsystem:poller</include>
                <include>es.amplia.oda.operation:api</include>
                <include>es.amplia.oda.operation:get</include>
                <include>es.amplia.oda.operation:set</include>
                <include>es.amplia.oda.operation:refreshinfo</include>
                <include>es.amplia.oda.operation:update</include>
                <include>es.amplia.oda.event:api</include>
                <include>es.amplia.oda.dispatcher:opengate</include>
                <include>es.amplia.oda.connector:coap</include>
            </includes>
            <outputDirectory>deploy</outputDirectory>
            <outputFileNameMapping>
                ${artifact.groupId}.${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>


    <fileSets>
        <fileSet>
            <directory>src/main/resources/scripts</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/odaBundlesConfiguration</directory>
            <outputDirectory>configuration</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/apacheFelixConfiguration</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/gogoConsoleConfiguration/</directory>
            <outputDirectory>etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/security</directory>
            <outputDirectory>security</outputDirectory>
        </fileSet>
        <fileSet>
            <directory/>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
